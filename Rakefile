# lib/tasks/dev.rake

# Environment specific tasks
namespace :dev do 
    namespace :test do
        desc "Hello World"
        task :helloworld do
            puts "Hello world..."
        end

        desc "Hello DevOps"
        task :hellodevops do
            puts "Hello DevOps..."
        end
    end

    namespace :other do
        desc "Hello World from other namespace"
        task :helloworld do
            puts "Hello world from other namespace"
        end
    end
end